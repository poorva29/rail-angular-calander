@model MiraiConsultMVC.Models.Home.Contact
<script type="text/javascript" src="../Scripts/bootstrap-dropdown.js"></script>
@{
    Layout = "~/Views/Shared/_AskmiraiMasterLayout.cshtml";
}
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm(new { autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {
        <div class="row-fluid">
            <div class="span7 custom-center-small-div ">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="finddoc-title">
                            Contact Us
                        </div>
                    </div>
                </div>
                <div class='row-fluid'>
                    <div class="span12">
                        <div class="title_color ">
                            We would love to hear your thoughts and experience with Mirai Consult&#8482;.
                        </div>
                    </div>
                </div>
                <div class="custom-green-container custom-equal-padding gray-border">
                    <div class='row-fluid'>
                        <div class="span12 btn-padding-left controls-right-padding">
                            @if (ViewBag.Message != null && ViewBag.Message == "Thank you for contacting us.")
                            {
                                <div class="wrapper-bordered alert alert-success" id="Messagediv">
                                    <label id="lblMessage" class="success_message_color msg_font">@ViewBag.Message</label>
                                </div>
                            }
                            else if (ViewBag.Message != null && ViewBag.Message == "Failed to send email.")
                            {
                                <div class="wrapper-bordered alert alert-error" id="Messagediv">
                                    <label id="lblMessage" class="error_message_color msg_font">@ViewBag.Message</label>
                                </div>
                            }                          
                        </div>
                    </div>
                    @if (Session["UserId"] == null && Session["UserEmail"] == null)
                    {
                        <div class='row-fluid'>
                            <div class="span12">
                                <div class="span4 pull-left btn-padding-left">
                                    <label class="required">Your Name:</label>
                                </div>
                                <div class="span8 pull-right btn-padding-left controls-right-padding">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "input-block-level gray-border contact_margin", placeholder = "Enter your name." })
                                    @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "validation-summary-errors" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class='row-fluid'>
                            <div class="span12">
                                <div class="span4 pull-left btn-padding-left">
                                    <label class="required">Your Email:</label>
                                </div>
                                <div class="span8 pull-right btn-padding-left controls-right-padding">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level gray-border contact_margin", placeholder = "Enter your email address." })
                                    @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "validation-summary-errors" })
                                </div>
                            </div>
                        </div>
                        <br />
                    }
                    else
                    {
                        @Html.HiddenFor(m => m.Email, new { Value = Convert.ToString(Session["UserEmail"]) });
                        @Html.HiddenFor(m => m.Name, new { Value = Session["UserFullName"] != null ? Convert.ToString(Session["UserFullName"]) : "" });
                    }
                    <div class='row-fluid'>
                        <div class="span12">
                            <div class="span4 pull-left btn-padding-left">
                                <label class="required">Your Message:</label>
                            </div>
                            <div class="span8 pull-right btn-padding-left controls-right-padding">
                                @Html.TextAreaFor(m => m.message, new { @class = "input-block-level gray-border contact_margin", rows = "4" })
                                @Html.ValidationMessageFor(m => m.message, string.Empty, new { @class = "validation-summary-errors" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span8 pull-right btn-padding-left">
                                <input type="submit" id="btnSend" class="btn thanx gray-border" value="Send" />
                                <input type="reset" id="btnClear" class="btn cancel gray-border" value="Reset" onclick="window.location.href = '/Home/Contact'" />
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    }
}
