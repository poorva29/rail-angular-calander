@model IEnumerable<MiraiConsultMVC.Models.QuestionModel>
@{
    ViewBag.Title = "TopicDetails";
    if (Session["UserId"] != null)
    {
        Layout = "~/Views/Shared/_PatientMasterLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AskmiraiMasterLayout.cshtml";
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {
        <div class="custom-central-div" style="margin-top:6%">
            <div class="row-fluid">
                <div>
                    <div class='row-fluid'>
                        <div class="span12">
                            <label class="finddoc-title">Relevant Questions About @ViewBag.tag</label>
                        </div>
                    </div>
                    <div class="margin_bottom">
                        @if (Model != null && (Model.ToList().Count != 0))
                        {
                            foreach (QuestionModel QModel in Model)
                            {
                                <div class='row-fluid'>
                                    <div class='span12 custom-green-container' style="display:table">
                                        <a style="display:table-row" href='/@(QModel.QuestionTextSeo)'>
                                            <div class='question_text custom-middle'>@Html.Raw(QModel.QuestionText) </div>
                                        </a>
                                    </div>
                                </div>
                                <div class='row-fluid'>
                                    @if (!String.IsNullOrEmpty(QModel.DocImg) || !String.IsNullOrEmpty(QModel.answerreplyedby))
                                    {

                                        <div id="feedDocImage_SQ" class='span1'>
                                            <div class='feedDocImage img'>
                                                @if ((QModel.DocImg) != "" && (QModel.DocImg) != null)
                                                {
                                                    <img src='@QModel.DocImg' />
                                                }
                                                else
                                                {
                                                    <img src='~/Content/image/img-na.png' />
                                                }
                                            </div>
                                        </div>
                                        <div class='span6 middle-size-padding'>
                                            <div class='ans_time_detail'><a class="ans_time_detail" target="_blank" href="../doctor/@QModel.name_seo">@QModel.answerreplyedby </a></div>
                                            <div class='title_text'>
                                                @QModel.Title
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class='span11'>
                                            <p class='ans_text'>No answers received </p>
                                        </div>
                                    }
                                    @*@if (Convert.ToInt32(Session["UserType"]) == Convert.ToInt32(UserType.Patient) && Convert.ToBoolean(QModel.isdocconnectuser))
                                    {
                                        <div class="span3  pull-right hidden-phone">
                                            <a class='btn book_appt_button' href='@Convert.ToString(ConfigurationSettings.AppSettings["DocConnectApptUrl"]) + @MiraiConsultMVC.Utilities.Encrypt(Convert.ToString(QModel.UserId)) &frmaskmirai=1' target='_blank' onclick='bookaptclicked( "@MiraiConsultMVC.Utilities.Encrypt(Convert.ToString(QModel.UserId))")'>Book Appointment </a>
                                            <br />
                                            <br />
                                        </div>
                                    }*@

                                    <div class='span11 middle-size-padding'>
                                        @if (QModel.answers != null && QModel.answers.Count > 0)
                                        {
                                            if (!string.IsNullOrEmpty(QModel.answers[0].AnswerImage))
                                            {
                                                <div class='span5 '>
                                                    <p class='ans_text'>@QModel.answers[0].AnswerText </p>
                                                </div>
                                                <div class='span3 offset1' id="feedAnsImage_SQ">
                                                    <div class='feedAnsImage img'>
                                                        <img src="../feed/answerPhotos/@QModel.answers[0].AnswerImage">
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class='span11'>
                                                    <p class='ans_text'>@QModel.answers[0].AnswerText</p>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                                @*if (Convert.ToInt32(Session["UserType"]) == Convert.ToInt32(UserType.Patient) && Convert.ToBoolean(QModel.isdocconnectuser))
                                {
                                    var href = (Convert.ToString(ConfigurationSettings.AppSettings["DocConnectApptUrl"]) + MiraiConsultMVC.Utilities.Encrypt(Convert.ToString(QModel.UserId)) + "&frmaskmirai=1").Trim();
                                    <div class="span3 offset1 pull-left visible-phone">
                                        <a class='btn book_appt_button' href='href' target='_blank' onclick='bookaptclicked( "@MiraiConsultMVC.Utilities.Encrypt(Convert.ToString(QModel.UserId))")'>Book Appointment </a>
                                    </div>
                                    <br />
                                }*@
                            }
                        }
                        else
                        {
                            <span>No records found</span>
                        }
                    </div>
                </div>
            </div>
        </div>
        @section metatags {
            <meta name="title" content="@ViewBag.tag">
            <meta name="description" content="@ViewBag.tag">
        }
    
         @section tileTags {
            <title>Mirai Consult-@ViewBag.tag </title>
        }
        <script type="text/javascript" src="~/Content/js/utility.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#txtQuestion").attr('maxlength', '200');
                var MaxLength = 200;
                $('#txtQuestion').keypress(function (e) {
                    if ($(this).val().length >= MaxLength) {
                        e.preventDefault();
                    }
                });
            });
            function isEnterPress(evt, x) {
                var charCode = (evt.which) ? evt.which : event.keyCode
                if (charCode == 13) {
                    var session = '@Session["UserType"]';
                    window.location.href = "/similarQuestions/" + x.value;
                    return false;
                }
                return true;
            }
            $(function () {
                $(".navigation li.active").removeClass("active");
                $('#liSimilarQuestions').addClass("active");
            });
            function Count(x) {
                document.getElementById('count').innerHTML = x.value.length + "/200";
            }
            function bookaptclicked(docid) {
                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/json',
                    data: '{"userid":' + docid + '}',
                    url: "../../Services/UserService.svc/IncrementAppointmentHitCnt",
                    success: function (response) {
                        response = JSON.parse(response);
                        console.log(response);
                    },
                    error: function (e) {

                    }
                });
            }
            function isEnterPress(evt, x) {
                var charCode = (evt.which) ? evt.which : event.keyCode
                if (charCode == 13) {
                    var session = '@Session["UserType"]';
                    if (session != null && session == 2)
                        window.location.href = "../Patients/AskDoctor?question=" + x.value;
                    else
                        window.location.href = "../Patients/similarQuestions?question=" + x.value;
                    return false;
                }
                return true;
            }
            //function maxLengthPaste(field, maxChars) {
            //    event.returnValue = false;
            //    if ((field.value.length + window.clipboardData.getData("Text").length) >= maxChars) {
            //        return false;
            //    }
            //    event.returnValue = true;
            //}
        </script>
    }
}

