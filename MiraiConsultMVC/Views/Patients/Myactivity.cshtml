@model IEnumerable<MiraiConsultMVC.Models.QuestionModel>
<div class="custom-central-div">
    <div class="row-fluid divmargin_bottom">
        <div class="margin_bottom">
            <div class="span12">
                <div class="finddoc-title">My Activity </div>
                <hr class="hr_color" />
            </div>
            @if (Model != null && Model.Count() != 0)
            {
                 foreach(QuestionModel question in Model)
                {
           
            <div class='row-fluid'>
                <div class="span12 custom-yellow-container">
                    <div style="width:90%" class="custom-inner-green-container">
                        @if (question.Counts.Equals("No answers received"))
                        {
                        <a class="question_text" href="#">
                            @Html.Raw(question.QuestionText)
                        </a>
                        }
                        else
                        {
                            <a class="question_text" href="../answers/@question.QuestionTextSeo" onclick="ga('send', 'event', 'Patient', 'Review The Answers', '@(question.QuestionText)');">
                                @Html.Raw(question.QuestionText)
                            </a>
                        }
                    </div>
                    <div class='pull right custom-middle'>
                        <div class='ans_text ' style="padding-left:5px">@question.CreateDate.ToString("dd-MMM-yyyy")</div>
                    </div>
                </div>
            </div>
            <div class='row-fluid'>
                <div class='span12'>
                    <p class='ans_text'>
                        @question.Counts
                    </p>
                </div>
            </div>
                }
            }
            else
            {
            <div class='row-fluid'>
                <div class="span12">
                    @*<hr class='hr_color' />*@
                    <span>No activities yet</span>
                </div>
            </div>  
            }        
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Content/js/utility.js"></script>
<script type="text/javascript">
    $(function () {
        $(".navigation li.active").removeClass("active");
        $('#liMyActivity').addClass("active");
    });
</script>