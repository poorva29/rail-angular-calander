@model IEnumerable<MiraiConsultMVC.Models.QuestionModel>
@{
    Layout = "~/Views/Shared/_PatientMasterLayout.cshtml";
}
@Scripts.Render("~/bundles/ViewsScripts")
<div class="row-fluid">
    <div class=" custom-central-div ">
        <div class="span12 custom-green-container custom-occupy">

            <form method="get" action="@Url.Action("DoctorQuestionList")" data-otf-ajax="true" data-otf-target="#DoctorQuestionList">
                <label class="span1 hidden-phone" style="padding-top:5px; text-align:right">Filter:</label>
                <div class="pull-right span11">
                    <label class="radio inline">
                        @Html.RadioButton("Questions", "All",!Model.FirstOrDefault().Filter) <label>All Questions</label>
                    </label>
                    <label class="radio inline">
                        @Html.RadioButton("Questions", "Unanswered", Model.FirstOrDefault().Filter) <label>Unanswered Questions</label>
                    </label>
                </div>
            </form>

        </div>

        <div class="row-fluid">
            <div class=" span12 custom-bottom-border">
                <div class="cust-Q-title" id="questionTitle">
                    @if (Model.FirstOrDefault().Filter)
                    {
                        <span>Unanswered Questions</span>
                    }
                    else
                    {
                        <span>All Questions</span>
                    }
                </div>
            </div>
        </div>
        <br />
        @if(Model.FirstOrDefault().QuestionId != 0)
        { 
            @Html.Partial("_DoctorQuestionList", Model);
        }
        else
        {
            <div class="margin_bottom">
                <span>No records found</span>
            </div>
        }
    </div>
</div>
