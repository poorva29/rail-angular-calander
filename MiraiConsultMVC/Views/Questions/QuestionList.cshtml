@{
    ViewBag.Title = "QuestionList";
    Layout = "~/Views/Shared/_PatientMasterLayout.cshtml";
}

<h2>QuestionList</h2>
<asp:ScriptManager ID="ScriptManager1" runat="server" EnablePageMethods="true" EnablePartialRendering="true">
</asp:ScriptManager>
<div class="row-fluid">
    <div class="custom-central-div">
        <div class="row-fluid">
            <div class=" span12">
                <div class=" finddoc-title">

                    Questions
                </div>
            </div>
            <div class="span12 custom-green-container custom-occupy">
                <label class="span1 hidden-phone" style="padding-top: 5px; text-align: right">Filter:</label>
                <div class="pull-right span11">
                    <label class="radio inline">
                        <asp:RadioButton ID="rdbFilterAll" GroupName="filter" Text="All Questions" runat="server" Checked="true" AutoPostBack="true" />
                    </label>
                    <label class="radio inline">
                        <asp:RadioButton ID="rdbFilterUnass" GroupName="filter" Text="Unassigned Questions" runat="server" AutoPostBack="true" />
                    </label>
                </div>
            </div>
            <div class="row-fluid">
                <div class=" span12">
                    <div clientidmode="Static" class="cust-Q-title" runat="server" id="questionListTitle"></div>
                    <hr class="hr_color" />
                </div>
            </div>
            <div class="margin_bottom">
                <div id="question"></div>
                <asp:HiddenField ID="HdnFlag" runat="server" ClientIDMode="Static" />
                <asp:HiddenField ID="HdnRecordSize" runat="server" ClientIDMode="Static" />
                <div class="row-fluid" style="margin-top: 20px;">
                    <div class="span11">
                        <img src="../Resources/image/ua-question.png" class="icon_Stethoscope" />
                        Unassigned Questions
                        &nbsp;&nbsp;
                        <img src="../Resources/image/a-question.png" class="icon_Stethoscope" />
                        Assigned questions
                    </div>
                </div>
            </div>
            <div style="text-align: center" id="loadingImage">
                <img alt="Data Loading.." src="../Resources/image/ajax_loader.gif" style="width: 50px" />
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="../Resources/js/utility.js"></script>
<script type="text/javascript">
    var indexoF;
    var responsFlag = 1;
    $(function () {
        $(".navigation li.active").removeClass("active");
        $("#liAdminQuestions").addClass("active");
        indexoF = 0;
        populateQuestionData(indexoF);
    });
    function onSuccess(result) {
        alert(result);
        window.location.assign(location.href);
        IEReload();
    }
    function onFailure(error) {
        window.location.assign(location.href);
        IEReload();
    }
    function IEReload() {
        var agent = navigator.userAgent;
        var reg1 = /MSIE\s?(\d+)(?:\.(\d+))?/i;
        var reg2 = /Trident\/7\./;
        if (agent.match(reg1) || agent.match(reg2)) {
            location.reload();
        }
    }
    function rejectQuestionByQuestionID(questionId, rejectbtn) {
        if (responsFlag == 1) {
            if (confirm("Are you sure you want to Reject this question?") == true) {
                PageMethods.RejectQuestionByQuestionID(questionId, onSuccess, onFailure);
                responsFlag = 0;
            }
        }
    }
    $(window).scroll(function () {
        if ($(window).scrollTop() >= $(document).height() - $(window).height() - 10) {
            var RecordSize = document.getElementById("HdnRecordSize").value;
            indexoF = parseInt(indexoF) + parseInt(RecordSize)
            populateQuestionData(indexoF)
        }
    });
    function populateQuestionData(index) {
        var RecordSize = document.getElementById("HdnRecordSize").value;
        var Flag = document.getElementById("HdnFlag").value;
        var cnt = 0;
        $.ajax({
            type: 'GET',
            dataType: 'json',
            url: "../../Services/UserService.svc/getQuestionList?RecordSize=" + RecordSize + "&Flag=" + Flag + "&lastQuestionNo=" + index,
            success: function (response) {
                var Question = 0;
                response = JSON.parse(response);
                if (response.length == 0) {
                    document.getElementById("loadingImage").style.visibility = "hidden"
                }
                cnt = response.length;
                for (indexcnt = 0; indexcnt < response.length; indexcnt++) {
                    var Flag = document.getElementById("HdnFlag").value;
                    if (response[indexcnt].questionstatus == 1)
                        var img = "<img style='width:30px;margin:0 5px 0 5px;' src='../Resources/image/a-question.png'>";
                    else
                        var img = "<img style='width:30px;margin:0 5px 0 5px;' src='../Resources/image/ua-question.png'>";
                    var template;
                    var title;
                    title = "";
                    if (indexcnt % 2 != 0)
                        template = "<div class='row-fluid icon_padding_bottom custom-yellow-back'><div class='custom-middle'>" + img + "</div><div class='custom-middle middle-size-padding question-padding' style='width:80%;word-break: break-all;'><div><a href='assignquestion.aspx?questionid=" + response[indexcnt].questionid + "' class='question_text'>" + response[indexcnt].questiontext + "</a></div></div><div  class='custom-middle'><img src='../Resources/image/del-question.png' title='Delete' class='float_right cust-del-icon' onclick='rejectQuestionByQuestionID(" + response[indexcnt].questionid + ",this)'/></div></div>";
                    else
                        template = "<div class='row-fluid icon_padding_bottom'><div class='custom-middle '>" + img + "</div><div  class='custom-middle middle-size-padding  question-padding' style='width:80%;word-break: break-all'><div><a href='assignquestion.aspx?questionid=" + response[indexcnt].questionid + "' class='question_text'>" + response[indexcnt].questiontext + "</a></div></div><div class='custom-middle'><img src='../Resources/image/del-question.png' title='Delete' class='float_right cust-del-icon' onclick='rejectQuestionByQuestionID(" + response[indexcnt].questionid + ",this)'/></div></div>";

                    $("#question").append(template);
                    Question++;
                }
                if (Question < 7) {
                    document.getElementById("loadingImage").style.visibility = "hidden"
                }
                if (response.length == 0 && $("#question").html().length == 0) {
                    $('#question')[0].innerHTML = 'No records found';
                }
            },
            error: function () {
            }
        });
    }
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-48132984-2', 'askmirai.com');
    ga('send', 'pageview');
</script>