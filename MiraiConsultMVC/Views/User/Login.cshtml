@model MiraiConsultMVC.Models.User.Login
<script src="~/Content/js/bootstrap-dropdown.js"></script>
<div class="row-fluid">
    <div>
        <div class="row-fluid">
            <div class="span9 offset3 margin_leftLogin finddoc-title">
                Login
            </div>
        </div>
        <div class="row-fluid">
            <div class="span9 offset3 margin_leftLogin ">
                <div id="div-login" class="content_border margin_rightLogin margin_bottom custom-green-container custom-equal-padding innerdivborder gray-border">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="row-fluid">
                                    <div class="span12 btn-padding-left controls-right-padding">
                                        @if (!String.IsNullOrEmpty(ViewBag.errorMsg))
{
    <div id="message" class="alert alert-error">
        <label id="lblError">@ViewBag.errorMsg</label>
    </div>
}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @using  (Html.BeginForm()) 
                    { 
                         @Html.AntiForgeryToken()
                         @Html.ValidationSummary(true)
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span4 pull-left btn-padding-left">
                                <label class="control-label required form-horizontal control-label">Email ID:</label>
                                </div>
                                <div class="span8 pull-right btn-padding-left controls-right-padding">
                                    @*<input type="password" class="input-block-level gray-border txt-position" id="txtEmail" maxlength="40" textmode="Email Id" autocomplete="off" placeholder="Password" >*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level gray-border txt-position", maxlength = "40", textmode = "text", placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span4 pull-left btn-padding-left">
                                <label class="control-label required form-horizontal control-label">Password:</label>
                                </div>
                            <div class="span8 pull-right btn-padding-left controls-right-padding">
                                @Html.TextBoxFor(m => m.Password, new { @class = "input-block-level gray-border txt-position", maxlength = "30", type = "Password", placeholder = "Password" })

                                @Html.ValidationMessageFor(m => m.Password)
                                @*<input type="password" class="input-block-level gray-border txt-position" id="txtPassword" maxlength="30" textmode="Password" placeholder="Password">*@
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 btn-padding-left">
                            <div class="span8 pull-right btn-padding-left controls-right-padding offset4">
                                <input id="chkRemember" class="chkbox" type="checkbox" /><label class="chkLabel">Remember me</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span12 btn-padding-left">
                            <div class="span8 pull-right btn-padding-left controls-right-padding offset4">
                                <input id="btnLogin" class="btn thanx gray-border" type="submit" value="Sign in" />
                                <div class="pull-right">
                                    <a href="forgotpassword.aspx" type="checkbox" style="color:#a7af38;font-weight:600; padding-top:5px;">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div></div>
                                <div class="controls">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="span3">
            </div>
        </div>
    </div>
</div>
<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
    $(".input-block-level").keyup(function () {
        Page_ClientValidate();
    });
    ga('create', 'UA-48132984-2', 'askmirai.com');
    ga('send', 'pageview');

</script>

