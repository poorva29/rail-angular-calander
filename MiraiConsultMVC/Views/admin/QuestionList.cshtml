@model IEnumerable<MiraiConsultMVC.Models.QuestionModel>
@{
    ViewBag.Title = "QuestionList";
    Layout = "~/Views/Shared/_PatientMasterLayout.cshtml";
}

<div class="row-fluid">
    <div class="custom-central-div">
        <div class="row-fluid">
            <div class=" span12">
                <div class=" finddoc-title">

                    Questions
                </div>
            </div>
            <div class="span12 custom-green-container custom-occupy">
                <label class="span1 hidden-phone" style="padding-top: 5px; text-align: right">Filter:</label>
                <div class="pull-right span11">
                    <label class="radio inline">
                        @Html.RadioButton("rdbFilter", "All",true, new { id = "AllQuestions" }) <label for="AllQuestions">All Questions</label>
                    </label>
                    <label class="radio inline">
                        @Html.RadioButton("rdbFilter", "Unassigned", new { id = "UnassignedQuestions" }) <label for="UnassignedQuestions">Unassigned Questions</label>
                    </label>
                    <label class="radio inline">
                        @Html.RadioButton("rdbFilter", "Unanswered", new { id = "UnansweredQuestions" }) <label for="UnansweredQuestions">Unanswered Questions</label>
                    </label>
                </div>
            </div>
            <div class="row-fluid">
                <div class=" span12">
                    <div class="cust-Q-title" id="questionListTitle">All Questions</div>
                    <hr class="hr_color" />
                </div>
            </div>
            <div class="margin_bottom">
                <div id="question"></div>
                <input type="hidden" id="HdnFlag" name="HdnFlag" value="@Model.FirstOrDefault().AnsweredBy" />
                <input type="hidden" id="HdnRecordSize" name="HdnRecordSize" value="@Model.FirstOrDefault().Counts" />
                <div class="row-fluid" style="margin-top: 20px;">
                    <div class="span11">
                        <img src="../Content/image/ua-question.png" class="icon_Stethoscope" />
                        Unassigned Questions
                        &nbsp;&nbsp;
                        <img src="../Content/image/a-question.png" class="icon_Stethoscope" />
                        Assigned Questions
                    </div>
                </div>
            </div>
            <div style="text-align: center" id="loadingImage">
                <img alt="Data Loading.." src="../Content/image/ajax_loader.gif" style="width: 50px" />
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="../Content/js/utility.js"></script>
<script type="text/javascript">
    var indexoF;
    var responsFlag = 1;
    
    $(function () {
        $(".navigation li.active").removeClass("active");
        $("#liAdminQuestions").addClass("active");
        indexoF = 0;
        populateQuestionData(indexoF);
    });
    function onSuccess(result) {
        alert(result);
        window.location.assign(location.href);
        IEReload();
    }
    function onFailure(error) {
        window.location.assign(location.href);
        IEReload();
    }
    function IEReload() {
        var agent = navigator.userAgent;
        var reg1 = /MSIE\s?(\d+)(?:\.(\d+))?/i;
        var reg2 = /Trident\/7\./;
        if (agent.match(reg1) || agent.match(reg2)) {
            location.reload();
        }
    }
    function rejectQuestionByQuestionID(questionId, rejectbtn) {
        if (responsFlag == 1) {
            if (confirm("Are you sure you want to Reject this question?") == true) {
                document.body.style.cursor = 'wait';
                $.ajax({
                    type: 'GET',
                    url: '/RejectQuestionByQuestionID/' +  questionId,
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        alert(response);
                        window.location.href = "admin-questions";
                        document.body.style.cursor = 'default';
                    },
                    error: function () {
                        alert("Error");
                    }
                });

                responsFlag = 0;
            }
        }
    }
    $(window).scroll(function () {
        if ($(window).scrollTop() >= $(document).height() - $(window).height() - 10) {
            var RecordSize = document.getElementById("HdnRecordSize").value;
            indexoF = parseInt(indexoF) + parseInt(RecordSize)
            populateQuestionData(indexoF)
        }
    });
    $(function () {
        $(":radio").change(function () {

            var $radioBtnValue = $(this).val();
            if (($radioBtnValue == 'All')) {
                document.getElementById("HdnFlag").value = 1;
                $("#questionListTitle").html('All Questions')
                $("#question").html('');
                populateQuestionData(0);
            }
            else if ($radioBtnValue == 'Unassigned') {
                document.getElementById("HdnFlag").value = 0;
                $("#questionListTitle").html('Unassigned Questions')
                $("#question").html('');
                populateQuestionData(0);
            }
            else if ($radioBtnValue = 'Unanswered') {
                document.getElementById("HdnFlag").value = 2;
                $("#questionListTitle").html('Unassigned Questions')
                $("#question").html('');
                populateQuestionData(0);
            }
        });

    });
    function populateQuestionData(index) {
        var RecordSize = document.getElementById("HdnRecordSize").value;
        var Flag = document.getElementById("HdnFlag").value;
        var cnt = 0;
        $.ajax({
            type: 'GET',
            dataType: 'json',
            url: "/Services/UserService.svc/getQuestionList?RecordSize=" + RecordSize + "&Flag=" + Flag + "&lastQuestionNo=" + index,
            success: function (response) {
                var Question = 0;
                response = JSON.parse(response);
                if (response.length == 0) {
                    document.getElementById("loadingImage").style.visibility = "hidden"
                }
                cnt = response.length;
                for (indexcnt = 0; indexcnt < response.length; indexcnt++) {
                    var Flag = document.getElementById("HdnFlag").value;
                    if (response[indexcnt].questionstatus == 1)
                        var img = "<img style='width:30px;margin:0 5px 0 5px;' src='../Content/image/a-question.png'>";
                    else
                        var img = "<img style='width:30px;margin:0 5px 0 5px;' src='../Content/image/ua-question.png'>";
                    var template;
                    var title;
                    title = "";
                    if (indexcnt % 2 != 0)
                        template = "<div class='row-fluid icon_padding_bottom custom-yellow-back'><div class='custom-middle'>" + img + "</div><div class='custom-middle middle-size-padding question-padding' style='width:80%;word-break: break-all;'><div><a href='/assign-question/" + response[indexcnt].questionid + "' class='question_text'>" + response[indexcnt].questiontext + "</a></div></div><div  class='custom-middle'><img src='../Content/image/del-question.png' title='Delete' class='float_right cust-del-icon' onclick='rejectQuestionByQuestionID(" + response[indexcnt].questionid + ",this)'/></div></div>";
                    else
                        template = "<div class='row-fluid icon_padding_bottom'><div class='custom-middle '>" + img + "</div><div  class='custom-middle middle-size-padding  question-padding' style='width:80%;word-break: break-all'><div><a href='/assign-question/" + response[indexcnt].questionid + "' class='question_text'>" + response[indexcnt].questiontext + "</a></div></div><div class='custom-middle'><img src='../Content/image/del-question.png' title='Delete' class='float_right cust-del-icon' onclick='rejectQuestionByQuestionID(" + response[indexcnt].questionid + ",this)'/></div></div>";

                    $("#question").append(template);
                    Question++;
                }
                if (Question < 7) {
                    document.getElementById("loadingImage").style.visibility = "hidden"
                }
                if (response.length == 0 && $("#question").html().length == 0) {
                    $('#question')[0].innerHTML = 'No records found';
                }
            },
            error: function () {
            }
        });
    }
</script>